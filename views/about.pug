extends default

block content
	
	
	section#about.about-section.about-about
		.container
			.row
				.col-lg-12
					.about-text
						h2.wow.fadeIn.animated
							span About Nor Media 
						br
						p.wow.fadeIn.animated
							| #{about.description1}
							
						h2.wow.fadeIn.animated
							span Why
						br
						p.wow.fadeIn.animated
							| #{about.description2}
						br
						p.wow.fadeIn.animated
							| #{about.description2}
	.gallery-section
		.container
			h2.wow.fadeIn.animated.gallery-heading(style='visibility: hidden; animation-name: none;')
				span
					center
			
			.gallery
				each person in people
					.gallery-item
						
						h2.person-name(style="text-align:center;color:#fff;")
							| #{person.firstname} #{person.lastname}
						hr
						img.gallery-image(src=`assets/images/team/${person.imgSrc}` style='height:62%;')
						a(href=`/profile?id=${person.id}` style='border:1px solid white;border-radius:4px;padding:10px;color:#fff; font-weight:bold; text-align:center;display:block;margin-top:30px;')
							| View Profile
	
	
	section#contact.contact-section
		.container
			.row
				.col-md-12
					.contact-headline
						h3.wow.fadeIn.animated
							| Let&apos;s 
							span Connect
						p.wow.fadeIn.animated Get in touch with us and get all the answers to your needs.
					.contact-content
						.contact-info
							p.contact-header
								span Head office 
							.info-line
								.info-icon.wow.fadeIn.animated
									i.fa.fa-map-marker.primary(aria-hidden='true')
								.info-text.wow.fadeIn.animated
									p.contact-text-info
										| 402 Plainfield Avenue San Francisco
										br
										| California, USA 13202
							p.contact-header
								span Delhi NCR Office 
							.info-line
								.info-icon.wow.fadeIn.animated
									i.fa.fa-map-marker.primary(aria-hidden='true')
								.info-text.wow.fadeIn.animated
									p.contact-text-info
										| 402 Plainfield Avenue San Francisco
										br
										|  California, USA 13202
							.info-line
								.info-icon.wow.fadeIn.animated
									i.fa.fa-envelope-o.primary(aria-hidden='true')
								.info-text.wow.fadeIn.animated
									p.contact-text-info normedia000sen@gmail.com
							.info-line
								.info-icon.wow.fadeIn.animated
									i.fa.fa-phone.primary(aria-hidden='true')
								.info-text.wow.fadeIn.animated
									p.contact-text-info 02705210124, 06780000687
							.bottom-info
								h4.wow.fadeIn.animated
									span Connect
									|  with us
								ul.list-inline.social-icons.wow.fadeIn.animated
									li
										a.primary-2-back.primary-back-hover(href='https://www.facebook.com/')
											i.fa.fa-facebook(aria-hidden='true')
									li
										a.primary-2-back.primary-back-hover(href='https://twitter.com/')
											i.fa.fa-twitter(aria-hidden='true')
									li
										a.primary-2-back.primary-back-hover(href='https://www.instagram.com/')
											i.fa.fa-instagram(aria-hidden='true')
									li
										a.primary-2-back.primary-back-hover(href='https://www.linkedin.com/')
											i.fa.fa-linkedin(aria-hidden='true')
						.contact-form
							h4.wow.fadeIn.animated
								| Send us a 
								span Message
							form(method='post' action='connect')
								.form-group.wow.fadeIn.animated
									label(for='name') Name: 
									input#name.form-control(type='text' name='mail_name')
								.form-group.wow.fadeIn.animated
									label(for='email') Email: 
									input#email.form-control(type='email' name='mail_to')
								.form-group.wow.fadeIn.animated
									label(for='message') Message: 
									textarea#message.form-control(name='mail_msg' rows='4')
								button.btn.btn-default.wow.fadeIn.primary-back-hover.primary-hover-border.animated(type='submit') Submit
